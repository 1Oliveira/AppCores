<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/papai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSorteio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="Sorteio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewCores"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#7996B4"
        app:layout_constraintBottom_toTopOf="@id/btnSorteio" />

    <TextView
        android:id="@+id/tvAlpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Quem sabe"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="@id/viewCores" />

    <TextView
        android:id="@+id/tvRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Quem sabe 2"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/tvAlpha" />

    <TextView
        android:id="@+id/tvGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Quem sabe3"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/tvRed" />

    <TextView
        android:id="@+id/tvBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Quem sabe4"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/tvGreen" />
</androidx.constraintlayout.widget.ConstraintLayout>